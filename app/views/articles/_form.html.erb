<%= form_for @article, :html => {class: "form-horizontal", role: "form" } do |f| %> 
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class:"form-control", placeholder: "Article title" %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, rows: 10, class:"form-control", placeholder: "Description" %>
  </div>
  
  <div class="actions form-group">
    <%= f.submit(@article.new_record? ? "Post Article" : "Update Article", class: 'btn btn-success') %>
  </div>
<% end %>
<div class="col-md-12 text-center">  
  [ <%= link_to 'Cancel and return to articles', articles_path %> ]
</div>
