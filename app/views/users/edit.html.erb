<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for @user, :html => {class: "form-horizontal", role: "form" } do |f| %>
          <h1 class="text-center">Create Profile</h1>
          <div class="well">
          <div class="field form-group">
            <%= f.label :first_name %>
            <%= f.text_field :first_name, class:"form-control" %>
          </div>
          <div class="field form-group">
            <%= f.label :last_name %>
            <%= f.text_field :last_name, class:"form-control" %>
          </div>
          <div class="field form-group">
            <%= f.label :description %>
            <%= f.text_area :description, row: 10, class:"form-control" %>
          </div>
          </div>
          </br>
          <h5 class="text-center"><strong>Leave the fields below blank unless you wish to update them</strong></h5>
          <div class="well">
          <div class="field form-group">
            <%= f.label :email %>
            <%= f.email_field :email, class:"form-control" %>
          </div>
          <div class="field form-group">
            <%= f.label :password %>
            <%= f.password_field :password, placeholder: "Enter new password", class:"form-control" %>
          </div>
          <div class="actions form-group">
            <%= f.submit "Update Profile", class: 'btn btn-success' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>