<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h1 class="text-center">Sign Up</h1>
      <div class="well">
        <%= form_for @user, :html => {class: "form-horizontal", role: "form" } do |f| %>
          <div class="field form-group">
            <%= f.label :username %>
            <%= f.text_field :username, placeholder: "Enter username", autofocus: true, class:"form-control" %>
          </div>
          <div class="field form-group">
            <%= f.label :email %>
            <%= f.email_field :email, placeholder: "Enter email", autofocus: true, class:"form-control" %>
          </div>
          <div class="field form-group">
            <%= f.label :password %>
            <%= f.password_field :password, placeholder: "Enter password", autofocus: true, class:"form-control" %>
          </div>
          <div class="actions form-group">
            <%= f.submit "Sign up", class: 'btn btn-success' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
