<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1 align="center">Home page</h1>
    <hr>
    </br>
    <% if logged_in? %>
      <%= render 'articles/article', obj: @articles %>
    <% else %>
      <p class="text-center">Join the Render Answer community to learn and share your knowledge with others!</p>
      <hr>
      <h4 class="text-center"><strong>We now have <%= @users.count %> users sharing and posting information!</strong></h4>
    <% end %>
  </div>
</div>
