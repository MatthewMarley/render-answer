<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <h1>Leave a comment..</h1>
      <div class="well">
        <%= form_for @comment, url: article_comments_path(article_id: @article.id), 
        :html => {class: "form-horizontal", role: "form"}, method: :post do |f| %>
          <div class="form-group">
              <%= f.text_area :body, rows: 10, class:"form-control", placeholder: "Enter your comment here..." %>
          </div>
          
          <div class="form-group">
              <%= f.submit "Post Comment", class: 'btn btn-primary' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>