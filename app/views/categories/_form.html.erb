<%= form_for @category, :html => {class: "form-horizontal", role: "form"} do |f| %>
    <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class:"form-control", placeholder: "Category Name" %>
    </div>
    
    <div class="form-group">
        <%= f.submit(@category.new_record? ? "Create Category" : "Update Category", class: 'btn btn-primary') %>
    </div>
<% end %>